<%= form_for @changeset, @path, fn(f) -> %>
  <div class="form-group">
    <%= label f, :html, class: "strong", data_focus_on_click: "#prompt_html_trix" %>
    <%= hidden_input f, :html, class: "form-control" %>
    <trix-editor id="prompt_html_trix" input="prompt_html" autofocus></trix-editor>
    <%= error_tag f, :html %>
  </div>

  <div class="form-group">
    <%= submit gettext("Save"), class: "btn btn-primary test-submit" %>
  </div>
<% end %>
