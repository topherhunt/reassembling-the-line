!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{http-equiv: "X-UA-Compatible" content: "IE=edge"}
    %meta{name: "viewport" content: "width=device-width, initial-scale=1"}
    %meta{name: "description" content: ""}
    %meta{name: "author" content: ""}

    %title RTL

    %link{rel: "stylesheet", href: "#{static_path(@conn, "/css/app.css")}"}
    %script{src: "#{static_path(@conn, "/js/app.js")}"}

  %body

    %nav.navbar.navbar-expand-sm.navbar-light.bg-light
      %a.navbar-brand.text-success{href: "/"} RTL
      %button.navbar-toggler{data-toggle: "collapse", data-target: "#navbar-content"}
        %span.navbar-toggler-icon
      #navbar-content.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
        %ul.navbar-nav
          %li.nav-item
            = link "Explore", to: explore_path(@conn, :index), class: "nav-link"
          - if @current_user do
            %li.nav-item
              = link "Admin", to: admin_video_path(@conn, :index), class: "nav-link"
            %li.nav-item.dropdown
              %a.nav-link.dropdown-toggle{href: "#", data-toggle: "dropdown"}
                = @current_user.full_name
                %span.caret
              .dropdown-menu.dropdown-menu-right
                = link "Log out", to: session_path(@conn, :logout), class: "dropdown-item text-danger test-logout-link"

    %main
      .container-fluid

        - if get_flash(@conn, :info) do
          %p.alert.alert-info{role: "alert"}= get_flash(@conn, :info)
        - if get_flash(@conn, :error) do
          %p.alert.alert-danger{role: "alert"}= get_flash(@conn, :error)

        = render @view_module, @view_template, assigns
