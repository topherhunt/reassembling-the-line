<%= form_for @changeset, @path, fn(f) -> %>
  <div class="form-group">
    <%= label f, :html %>
    <%= textarea f, :html, class: "form-control", autofocus: true, rows: 3 %>
    <%= error_tag f, :html %>
  </div>

  <div class="form-group">
    <%= submit "Save", class: "btn btn-primary test-submit" %>
  </div>
<% end %>
